<!DOCTYPE html>
<html lang="en">
<%- include('../includes/head.ejs', {hasProductCss: false, hasFormsCss: false}) %>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <% if (orders.length <= 0) { %>
    <h1>Nothing there!</h1>
    <% } else { %>
    <ul class="orders">
      <% orders.forEach(order => { %>
      <li class="orders__item">
        <h1>Order - # <%= order._id %></h1>
        <ul class="orders__products">
          <% order.products.forEach(item => { %>
          <li class="orders__products-item"><%= item.product.title %> (Quantity: <%= item.quantity %>)</li>
          <% }); %>
        </ul>
      </li>
      <% }); %>
    </ul>
    <% } %>
  </main>
</body>

</html>